@model EntityLayer.Concrete.Author

@{
    ViewBag.Title = "AuthorEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AuthorEdit</h2>

<form class="form-group" method="post">
    @Html.Label("Yazar ID")
    @Html.TextBoxFor(x => x.AuthorID, new { @class = "form-control" })
    <br />

    @Html.Label("Ad Soyadı")
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
    <br />

    @Html.Label("Resim Linki")
    @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })
    <br />

    @Html.Label("Hakkında")
    @Html.TextAreaFor(x => x.AuthorAbout, 5, 20, new { @class = "form-control" })
    <br />

    @Html.Label("Meslek")
    @Html.TextBoxFor(x => x.AuthorJob, new { @class = "form-control" })
    <br />

    @Html.Label("Mail Adresi")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />

    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />

    @Html.Label("Telefon Numarası")
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kaydet</button>
</form>
